# ===============================
# Kairos Web - .env.sample (Create React App)
# Copia a .env.local (para desarrollo) o configura en Vercel/Netlify.
# ===============================

# Backend API base
# Ej: http://localhost:3002  o  https://tu-backend.onrender.com
REACT_APP_API_BASE=http://localhost:3002

# Puerto del backend (si usas derivación por dominio/túnel)
REACT_APP_API_PORT=3002

# Mostrar badge para cambiar endpoint en runtime (dev)
REACT_APP_SHOW_API_BADGE=false

# --- reCAPTCHA v3 (opcional) ---
REACT_APP_CAPTCHA_ENABLED=false
REACT_APP_CAPTCHA_PROVIDER=recaptcha
REACT_APP_RECAPTCHA_SITE_KEY=
